<div class="stations">
  <%= link_to('Home', root_path, class: 'home') %>
  <h1><%= @station.name %></h1>
</div>

<table class="train">
  <caption>Trains</caption>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th>Wagon count</th>
    <th>Starting station</th>
    <th>End station</th>
  </tr>
  <% @trains.each do |train| %>
      <tr>
        <td><%= link_to(train.name, train_path(id: train.id)) %></td>
        <td><%= train.number %></td>
        <td><%= train.wagon_count %></td>
        <%= route train %>
      </tr>
  <% end %>
</table>

<table class="beverage-store">
  <caption>Beverage stores</caption>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @beverage_stores.each do |beverage_store| %>
      <tr>
        <td><%= beverage_store.name %></td>
        <td><%= beverage_store.description %></td>
      </tr>
  <% end %>
</table>

<div class="info">
  <div class="station address"><%= @station.address %></div>
  <div class="station phone"><%= @station.phone %></div>
  <div class="station information"><%= @station.information %></div>
</div>
