<div class="trains">
  <%= link_to('Home', root_path, class: 'home') %>
  <h1>Welcome to RYOSUKE Train Station Pages</h1>
</div>
<table class="station">
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th>Wagon count</th>
    <th>Starting station</th>
    <th>End station</th>
  </tr>
  <% @trains.each do |train| %>
      <tr>
        <td><%= link_to(train.name, train_path(id: train.id)) %></td>
        <td><%= train.number %></td>
        <td><%= train.wagon_count %></td>
        <%= route train %>
      </tr>
  <% end %>
</table>